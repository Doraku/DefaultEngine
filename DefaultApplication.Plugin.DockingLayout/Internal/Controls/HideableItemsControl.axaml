<ItemsControl
    x:Class="DefaultApplication.DockingLayout.Internal.Controls.HideableItemsControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:DefaultApplication.DockingLayout.Internal.Controls"
    xmlns:converters="using:DefaultApplication.DockingLayout.Internal.Converters"
    xmlns:system="using:System"
    Background="Transparent"
    ItemsSource="{Binding $self.Hideables}">

    <ItemsControl.Styles>

        <Style Selector="ItemsControl:empty">
            <Setter Property="IsVisible" Value="False" />
        </Style>

        <Style Selector="ItemsControl.Vertical WrapPanel.HideablesPanel">
            <Setter Property="Orientation" Value="Vertical" />
        </Style>

        <Style Selector="LayoutTransformControl.HideableHeader">
            <Setter Property="Margin" Value="5 0" />
        </Style>

        <Style Selector="ItemsControl.Vertical LayoutTransformControl.HideableHeader">
            <Setter Property="LayoutTransform">
                <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5" />
            </Setter>
            <Setter Property="Margin" Value="0 5" />
        </Style>

        <Style Selector="Border.HideableHeader">

            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
            <Setter Property="BorderThickness" Value="0 0 0 5" />
            <Setter Property="TextElement.Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />

            <Style Selector="^:pointerover">
                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}" />
                <Setter Property="TextElement.Foreground" Value="{Binding $parent[TopLevel].Foreground}" />
            </Style>

        </Style>

        <Style Selector="ItemsControl.Top Border.HideableHeader">
            <Setter Property="BorderThickness" Value="0 5 0 0" />
        </Style>

        <Style Selector="ItemsControl.Right Border.HideableHeader">
            <Setter Property="BorderThickness" Value="0 5 0 0" />
        </Style>

        <Style Selector="FlyoutPresenter.HideableFlyout">
            <Setter Property="MaxHeight" Value="{Binding $parent[ItemsControl].Parent.Bounds.Height}" />
            <Setter Property="MaxWidth" Value="{Binding $parent[ItemsControl].Parent.Bounds.Width}" />
            <Setter Property="Height" Value="200" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Panel Margin="{TemplateBinding Margin}">
                        <controls:LayoutContentPresenter DataContext="{TemplateBinding Content}" />
                        <Rectangle
                            MinWidth="3"
                            MinHeight="3"
                            Classes="FlyoutResizeThumb"
                            Fill="Transparent"
                            PointerPressed="OnFlyoutResize" />
                    </Panel>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="ItemsControl.Horizontal FlyoutPresenter.HideableFlyout">
            <Setter Property="Width" Value="{Binding $parent[ItemsControl].Bounds.Width}" />
            <Setter Property="Margin" Value="5 0" />
            <Setter Property="MaxHeight">
                <MultiBinding Converter="{x:Static converters:OperationConverters.SumDoubles}">
                    <Binding Path="$parent[ItemsControl].Parent.Bounds.Height" />
                    <Binding Converter="{x:Static converters:OperationConverters.NegateDouble}" Path="$parent[ItemsControl].Bounds.Height" />
                    <Binding>
                        <Binding.Source>
                            <system:Double>2</system:Double>
                        </Binding.Source>
                    </Binding>
                </MultiBinding>
            </Setter>
        </Style>

        <Style Selector="ItemsControl.Vertical FlyoutPresenter.HideableFlyout">
            <Setter Property="Height" Value="{Binding $parent[ItemsControl].Bounds.Height}" />
            <Setter Property="Margin" Value="0 5" />
            <Setter Property="MaxWidth">
                <MultiBinding Converter="{x:Static converters:OperationConverters.SumDoubles}">
                    <Binding Path="$parent[ItemsControl].Parent.Bounds.Width" />
                    <Binding Converter="{x:Static converters:OperationConverters.NegateDouble}" Path="$parent[ItemsControl].Bounds.Width" />
                    <Binding>
                        <Binding.Source>
                            <system:Double>2</system:Double>
                        </Binding.Source>
                    </Binding>
                </MultiBinding>
            </Setter>
        </Style>

        <Style Selector="ItemsControl.Vertical Rectangle.FlyoutResizeThumb">
            <Setter Property="Cursor" Value="SizeWestEast" />
        </Style>

        <Style Selector="ItemsControl.Left Rectangle.FlyoutResizeThumb">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <Style Selector="ItemsControl.Left controls|LayoutContentPresenter">
            <Setter Property="Margin" Value="0 0 2 0" />
        </Style>

        <Style Selector="ItemsControl.Right Rectangle.FlyoutResizeThumb">
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style Selector="ItemsControl.Right controls|LayoutContentPresenter">
            <Setter Property="Margin" Value="2 0 0 0" />
        </Style>

        <Style Selector="ItemsControl.Horizontal Rectangle.FlyoutResizeThumb">
            <Setter Property="Cursor" Value="SizeNorthSouth" />
        </Style>

        <Style Selector="ItemsControl.Top Rectangle.FlyoutResizeThumb">
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>

        <Style Selector="ItemsControl.Top controls|LayoutContentPresenter">
            <Setter Property="Margin" Value="0 0 0 2" />
        </Style>

        <Style Selector="ItemsControl.Bottom Rectangle.FlyoutResizeThumb">
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

        <Style Selector="ItemsControl.Bottom controls|LayoutContentPresenter">
            <Setter Property="Margin" Value="0 2 0 0" />
        </Style>

    </ItemsControl.Styles>

    <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <WrapPanel Classes="HideablesPanel" />
        </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>

    <ItemsControl.ItemTemplate>
        <DataTemplate>
            <LayoutTransformControl Classes="HideableHeader">
                <Border
                    Background="Transparent"
                    Classes="HideableHeader"
                    PointerPressed="OnHideableClicked">

                    <TextBlock Text="{Binding}" />

                </Border>
            </LayoutTransformControl>
        </DataTemplate>
    </ItemsControl.ItemTemplate>

</ItemsControl>
