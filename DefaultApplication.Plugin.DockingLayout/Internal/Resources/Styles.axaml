<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:DefaultApplication.DockingLayout.Internal.Controls">

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <MergeResourceInclude Source="../Controls/LayoutContentPresenter.axaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <Style Selector="FlyoutPresenter ToggleButton#PART_HideButton">
        <Setter Property="IsChecked" Value="True" />
    </Style>

    <Style Selector="Window.Dockable">
        <Setter Property="ExtendClientAreaToDecorationsHint" Value="true" />
    </Style>

</Styles>
