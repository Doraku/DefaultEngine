<Window
    x:Class="DefaultEngine.Editor.Internal.DefaultSplashScreen"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Default Engine"
    Icon="/Resources/Images/DefaultLogo.png"
    PointerPressed="OnClicked"
    SizeToContent="WidthAndHeight"
    SystemDecorations="None"
    Topmost="True"
    WindowStartupLocation="CenterScreen">

    <DockPanel>

        <TextBlock
            x:Name="InformationsTextBlock"
            HorizontalAlignment="Center"
            DockPanel.Dock="Bottom"
            Text="starting" />

        <ProgressBar
            x:Name="InformationsProgress"
            Margin="5"
            DockPanel.Dock="Bottom"
            IsIndeterminate="True" />

        <Image Width="400" Source="/Resources/Images/DefaultEngineLogo.png" />

    </DockPanel>

</Window>
