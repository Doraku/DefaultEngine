<Grid
    x:Class="DefaultApplication.Internal.Plugins.ShellPlugin.Views.EnvironmentGeneralSettingsView"
    x:DataType="settings:EnvironmentGeneralSettings"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:settings="using:DefaultApplication.Internal.Plugins.ShellPlugin.Settings"
    xmlns:views="using:DefaultApplication.Internal.Plugins.ShellPlugin.Views"
    ColumnSpacing="10">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <TextBlock
        Grid.Column="0"
        VerticalAlignment="Center"
        Text="Theme" />

    <ComboBox
        Grid.Column="1"
        ItemsSource="{Binding Source={x:Static views:EnvironmentGeneralSettingsView.Themes}}"
        SelectedItem="{Binding Theme}">

        <ComboBox.ItemTemplate>
            <DataTemplate DataType="ThemeVariant">
                <TextBlock Text="{Binding Key}" />
            </DataTemplate>
        </ComboBox.ItemTemplate>

    </ComboBox>

</Grid>
