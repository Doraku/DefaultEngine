<DataTemplates xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate DataType="Bitmap">

        <Image Source="{Binding}" />

    </DataTemplate>

    <DataTemplate DataType="StreamGeometry">

        <PathIcon Data="{Binding}">

            <PathIcon.Styles>

                <Style Selector="PathIcon:disabled">

                    <Setter Property="Foreground" Value="{DynamicResource SystemControlDisabledBaseMediumLowBrush}" />

                </Style>

            </PathIcon.Styles>

        </PathIcon>

    </DataTemplate>

</DataTemplates>
